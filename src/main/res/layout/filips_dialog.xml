<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/pcap_setting_layout">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingTop="16dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/filipstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:textColor="@color/colorOnSurface"

                android:singleLine="true"
                android:text="Enable PCAP Logging" />

            <TextView
                android:id="@+id/enable_pcap_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/filipstitle"
                android:layout_alignStart="@id/filipstitle"
                android:layout_alignLeft="@id/filipstitle"
                android:layout_gravity="start"
                android:maxLines="10"
                android:text="Specify location below"
                android:textAlignment="viewStart" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pcap_checkbox_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp">

            <CheckBox
                android:id="@+id/pcap_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/location_selector">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingTop="16dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/filipstitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:textColor="@color/colorOnSurface"

                android:singleLine="true"
                android:text="PCAP Log Location" />

            <TextView
                android:id="@+id/pcap_location_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/filipstitle2"
                android:layout_alignStart="@id/filipstitle2"
                android:layout_alignLeft="@id/filipstitle2"
                android:layout_gravity="start"
                android:maxLines="10"
                android:text="Specify log location"
                android:textAlignment="viewStart" />


        </RelativeLayout>



    </LinearLayout>
</LinearLayout>
