<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <ExpandableListView
        android:id="@+id/loglistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:childDivider="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:headerDividersEnabled="false"
        android:padding="5dp">

    </ExpandableListView>

    <RelativeLayout
        android:id="@+id/linearLayout"
        style="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.8"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/SortButton"
            style="@android:style/Widget.DeviceDefault.ActionButton.Overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:src="@drawable/ic_sort_by_size" />

        <ImageButton
            android:id="@+id/FilterButton"
            style="@android:style/Widget.DeviceDefault.ActionButton.Overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/GroupButton"
            android:src="@drawable/ic_filter" />

        <ImageButton
            android:id="@+id/DeleteButton"
            style="@android:style/Widget.DeviceDefault.ActionButton.Overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/FilterButton"
            android:src="@drawable/ic_action_discard" />

        <ImageButton
            android:id="@+id/GroupButton"
            style="@android:style/Widget.DeviceDefault.ActionButton.Overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/SortButton"
            android:src="@drawable/ic_device_access_storage" />
    </RelativeLayout>


</RelativeLayout>
