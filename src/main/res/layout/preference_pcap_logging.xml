<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pcap_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingTop="16dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/pcap_log_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"

                android:text="@string/pcap_log_setting_name"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/pcap_log_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pcap_log_toggle"
                android:layout_alignStart="@id/pcap_log_toggle"
                android:layout_alignLeft="@id/pcap_log_toggle"
                android:layout_gravity="start"
                android:maxLines="10"
                android:text="Specify location below"
                android:textAlignment="viewStart" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pcap_checkbox_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp">

            <CheckBox
                android:id="@+id/pcap_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pcap_location_preference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingTop="16dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/pcap_location_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"

                android:text="@string/pcap_location_setting_name"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/pcap_location_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pcap_location_selector"
                android:layout_alignStart="@id/pcap_location_selector"
                android:layout_alignLeft="@id/pcap_location_selector"
                android:layout_gravity="start"
                android:maxLines="10"
                android:text="Specify log location"
                android:textAlignment="viewStart" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
